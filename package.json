{
	"name": "4399-on-vscode",
	"displayName": "4399 on vscode",
	"description": "在vscode上玩4399小游戏, 帮助你劳逸结合, 提高开发效率",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "extension.js",
	"contributes": {
		"configuration": {
			"title": "4399 on vscode",
			"properties": {
				"4399-on-vscode.user-agent": {
					"description": "4399 on vscode 发出的请求头中的 UA",
					"type": "string",
					"default": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/103.0.0.0 Safari/537.36"
				},
				"4399-on-vscode.cookie": {
					"description": "4399 on vscode 发出的请求头中的 cookie, 该设置可能会由此扩展自动更改, 您设置的 cookie 无法用于登陆账号",
					"type": "string",
					"default": ""
				},
				"4399-on-vscode.referer": {
					"description": "4399 on vscode 发出的请求头中的 referer",
					"type": "string",
					"default": "https://www.4399.com/"
				},
				"4399-on-vscode.outputLogs": {
					"description": "控制是否输出日志",
					"type": "boolean",
					"default": false
				},
				"4399-on-vscode.title": {
					"description": "控制 Webview 标题, 若留空则使用游戏名称",
					"type": "string",
					"default": ""
				}
			}
		},
		"commands": [
			{
				"command": "4399-on-vscode.special",
				"title": "4399 on vscode: 推荐"
			},
			{
				"command": "4399-on-vscode.get",
				"title": "4399 on vscode: 输入游戏 id"
			},
			{
				"command": "4399-on-vscode.search",
				"title": "4399 on vscode: 搜索"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "14.x",
		"@types/vscode": "^1.67.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.14.0",
		"glob": "^8.0.1",
		"mocha": "^9.2.2",
		"typescript": "^4.6.4"
	},
	"keywords": [
		"小霸王",
		"游戏",
		"童年回忆",
		"games",
		"高效工作"
	],
	"publisher": "dsy4567",
	"license": "MIT",
	"dependencies": {
		"axios": "^0.27.2",
		"cheerio": "^1.0.0-rc.12",
		"iconv-lite": "^0.6.3"
	},
	"icon": "icon.png",
	"repository": "https://github.com/dsy4567/4399-on-vscode.git",
	"author": "dsy4567",
	"bugs": {
		"email": "dsy4567@outlook.com",
		"url": "https://github.com/dsy4567/4399-on-vscode/issues"
	},
	"homepage": "https://github.com/dsy4567/4399-on-vscode#readme"
}